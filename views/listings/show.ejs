<% layout('./layouts/boilerplate') -%>

<body class="bg-light">
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow border-0 rounded-4 overflow-hidden">
          <% if (listing.image) { %>
          <img
            src="<%= listing.image %>"
            class="card-img-top rounded-0"
            style="max-height: 300px; object-fit: cover; transition: 0.3s"
            alt="Listing Image"
          />
          <% } %>

          <div class="card-body p-4">
            <h4 class="card-title mb-3 fw-semibold"><%= listing.title %></h4>
            <p class="card-text">
              Created by :
              <i> <%= listing.owner.username %></i>
            </p>
            <p class="card-text text-muted"><%= listing.description %></p>

            <ul class="list-group list-group-flush mb-3">
              <li class="list-group-item border-0 px-0">
                <strong>Price:</strong> NPR <%= listing.price ?
                listing.price.toLocaleString("en-IN") : "N/A" %> /night
              </li>
              <li class="list-group-item border-0 px-0">
                <strong>Location:</strong> <%= listing.location %>
              </li>
              <li class="list-group-item border-0 px-0">
                <strong>Country:</strong> <%= listing.country %>
              </li>
            </ul>
            <% if(currentUser&& currentUser._id.equals(listing.owner._id)) { %>
            <div class="d-flex justify-content-between align-items-center mb-4">
              <a
                href="/listings/<%= listing._id %>/edit"
                class="btn btn-outline-dark btn-sm px-3"
              >
                Edit
              </a>

              <form
                action="/listings/<%= listing._id %>?_method=DELETE"
                method="POST"
              >
                <button class="btn btn-danger btn-sm px-3" type="submit">
                  <i class="fa fa-trash me-1"></i> Delete
                </button>
              </form>
            </div>
            <% } %>
            <hr class="my-4" />

            <% if(currentUser){ %>
            <h5 class="mb-3 fw-semibold">Leave a Review</h5>

            <form
              action="/listings/<%= listing._id %>/reviews"
              method="POST"
              class="border rounded p-4 shadow-sm bg-light mt-4"
            >
              <h5 class="mb-3">Leave a Review</h5>

              <div class="mb-3">
                <label for="rating" class="form-label fw-bold"
                  >Rating (1 to 5):</label
                >
                <input
                  type="number"
                  name="review[rating]"
                  id="rating"
                  min="1"
                  max="5"
                  class="form-control"
                  placeholder="Enter a rating"
                  required
                />
              </div>

              <div class="mb-3">
                <label for="comment" class="form-label fw-bold">Comment:</label>
                <textarea
                  name="review[comment]"
                  id="comment"
                  rows="3"
                  class="form-control"
                  placeholder="Write your thoughts..."
                  required
                ></textarea>
              </div>

              <button type="submit" class="btn btn-outline-primary w-100">
                Post Review
              </button>
            </form>
            <% } %>
            <hr class="my-4" />

            <h5 class="mb-4 fw-semibold">User Reviews</h5>

            <div class="row">
              <% if (listing.reviews && listing.reviews.length > 0) { %> <%
              listing.reviews.forEach((review) => { %>
              <div class="col-md-6 mb-4">
                <div class="card h-100 shadow-sm">
                  <div class="card-body">
                    <h6 class="card-subtitle mb-1 text-primary fw-bold">
                      <%= review.author.username %>

                    </h6>
                    <h6 class="card-subtitle mb-2 text-warning">
                      <% for(let i=1; i<=5; i++) { %> <% if(i <= review.rating)
                      { %>
                      <i class="bi bi-star-fill"></i>
                      <% } else { %>
                      <i class="bi bi-star"></i>
                      <% } %> <% } %>
                    </h6>
                    <p class="card-text">
                      <%= review.comment || "No comment provided." %>
                    </p>
                    <small class="text-muted">
                      Reviewed on <%= new
                      Date(review.createdAt).toLocaleDateString() %>
                    </small>

                    <!-- Delete Button -->
                    <form
                      action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                      method="POST"
                      class="mt-3"
                    >
                      <button
                        type="submit"
                        class="btn btn-sm btn-outline-danger w-100"
                      >
                        <i class="fa fa-trash me-1"></i> Delete Review
                      </button>
                    </form>
                  </div>
                </div>
              </div>

              <% }) %> <% } else { %>
              <p class="text-muted">No reviews yet. Be the first to review!</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap Icons -->
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
  />

  <!-- Star Rating Script -->
  <script>
    const stars = document.querySelectorAll("#star-rating .bi");
    const ratingInput = document.getElementById("ratingInput");

    stars.forEach((star) => {
      star.addEventListener("click", () => {
        const rating = star.getAttribute("data-value");
        ratingInput.value = rating;
        stars.forEach((s) => {
          const sVal = s.getAttribute("data-value");
          s.classList.toggle("bi-star-fill", sVal <= rating);
          s.classList.toggle("bi-star", sVal > rating);
          s.classList.add("text-warning");
        });
      });
    });
  </script>
</body>
