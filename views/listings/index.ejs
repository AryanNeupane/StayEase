<% layout('./layouts/boilerplate') -%>
<div class="container my-5">
  <!-- <h3 class="text-center mb-4">All Listings</h3> -->

  <style>
    #filters {
      position: sticky;
      top: 0;
      z-index: 1000;
      background-color: white;
      padding: 5px;
      border-bottom: 1px solid #ddd;
      display: flex;
      /* flex-wrap: nowrap; */
      text-align: center;
      margin-right: 1rem;
    }
    .filter {
      flex: 1;
      padding: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
      opacity: 0.7;
    }
    .filter:hover {
      /* background-color: #f0f0f0; */
      opacity: 1;
    }
  </style>
  <div id="filters">
    <div class="filter">
      <div>
        <i class="fa-solid fa-fire"></i>
      </div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-bed"></i>
      </div>
      <p>Room</p>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-mountain-city"></i>
      </div>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <div>
        <i class="fa-brands fa-fort-awesome"></i>
      </div>
      <p>Castles</p>
    </div>
    <div class="filter">
      <div>
       <i class="fa-solid fa-tent"></i>
      </div>
      <p>Camping</p>
    </div>
    <div class="filter">
      <div>
       <i class="fa-solid fa-tractor"></i>
      </div>
      <p>Farms</p>
    </div>
    <div class="filter">
      <div>
      <i class="fa-solid fa-snowflake"></i>
      </div>
      <p>Arctic</p>
    </div>
    <div class="form-check form-switch mt-3">
    <input class="form-check-input" type="checkbox" id="taxSwitch">
    <label class="form-check-label" for="taxSwitch">Include 18% Tax</label>
  </div>
  </div>

  <div
    class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mt-3"
  >
    <% for (let listing of allListings) { %>
    <div class="col">
      <div class="card h-100 shadow-sm shadow-sm hover-shadow border-0">
        <img
          src="<%= typeof listing.image === 'object' ? listing.image.url : listing.image %>"
          class="card-img-top"
          alt="<%= listing.title %>"
          style="height: 200px; object-fit: cover"
        />
        <div class="card-body d-flex flex-column position-relative">
          <h5 class="card-title mb-2"><%= listing.title %></h5>
          <p class="card-text text-muted mb-1">
            <%= listing.location %>, <%= listing.country %>
          </p>
          <p class="card-text fw-semibold">
            NPR <%= listing.price ? listing.price.toLocaleString("en-IN") :
            "N/A" %> /night
            <small class="text-muted">(+18% tax)</small>
          </p>

          <!-- View Details button -->
          <a
            href="/listings/<%= listing._id %>"
            class="btn btn-sm btn-outline-primary mt-auto z-1"
            >View Details</a
          >

          <!-- Makes the entire card clickable, behind the button -->
          <a href="/listings/<%= listing._id %>" class="stretched-link"></a>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
